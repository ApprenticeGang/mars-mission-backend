{
  "name": "mars-mission-backend",
  "version": "1.0.0",
  "description": "",
  "main": "dist/start.js",
  "scripts": {
    "dev": "babel-node -r ts-node/register ./src/start.ts",
    "build": "tsc",
    "start": "node .",
    "test": "jest ./src",
    "test:coverage": "jest ./src --coverage",
    "lint": "eslint ./src/**/*.ts --max-warnings=0",
    "lint:fix": "eslint --fix ./src/**/*.ts"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "crypto": "1.0.1",
    "dotenv": "8.2.0",
    "express": "4.17.1",
    "express-async-errors": "^3.1.1",
    "knex": "0.21.5",
    "node-fetch": "2.6.1",
    "nunjucks": "3.2.2",
    "passport": "^0.4.1",
    "passport-local": "1.0.0",
    "pg": "8.3.3",
    "node-sass-middleware": "0.11.0"
  },
  "devDependencies": {
    "ts-node": "9.0.0",
    "typescript": "4.0.2",
    "@types/node": "14.10.0",
    "@babel/core": "7.11.6",
    "@babel/node": "7.10.5",
    "@babel/preset-env": "7.11.5",
    "@types/express": "4.17.8",
    "@types/node-fetch": "2.5.7",
    "@types/knex": "0.16.1",
    "@types/nunjucks": "3.1.3",
    "@types/supertest": "2.0.10",
    "@types/passport": "1.0.4",
    "@types/node-sass-middleware": "0.0.31",
    "@types/passport-local": "1.0.33",
    "jest": "26.4.2",
    "@types/jest": "26.0.13",
    "ts-jest": "26.3.0",
    "supertest": "4.0.2",
    "eslint": "7.9.0",
    "@typescript-eslint/parser": "4.1.1",
    "@typescript-eslint/eslint-plugin": "4.1.1"
  },
  "jest": {
    "preset": "ts-jest",
    "collectCoverageFrom": [
      "./src/**/*"
    ],
    "coveragePathIgnorePatterns": [
      "./src/nasa/nasaApiClient.ts",
      "./src/database/database.ts",
      "./src/start.ts",
      "./src/testData/testdata.json",
      "./src/testData/testDataArticles.json"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    }
  }
}
